@model WebApp.Models.Payment

@{
    ViewData["Title"] = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Make Payment and confirm the order</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Paymentpost">
            @*<input type="hidden" name="counter" value="@ViewBag.cartid" />*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Creditnumber" class="control-label">Creditnumber :</label>
                <input asp-for="Creditnumber" class="form-control" />
                <span asp-validation-for="Creditnumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label name="adress" class="control-label">Address : </label>
                <textarea rows="3" name="adress" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Make Payment" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
