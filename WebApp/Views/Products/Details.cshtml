@model WebApp.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.Productname)*@
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Productname)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.Productdesciption)*@
            Desciption
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Productdesciption)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
           Hurry only @Html.DisplayFor(model => model.Quantity) left !!
        </dd>
        @*<dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Imgurl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Imgurl)
        </dd>*@
    </dl>
</div>
<div>
    <a asp-action="Cart" asp-route-id="@Model.Id">Add to Cart</a> |
    @if (User.Identity.IsAuthenticated)
    {

        @if (User.Claims.Where(p => p.Type == "name").Select(p => p.Value).Single() == "admin")
        {
            <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        }
    }
    <a asp-action="Index">Back</a>
</div>
